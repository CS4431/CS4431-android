<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lakehead.textbookmarket.Book_Info"
    android:background="#000000">

    <ImageView
        android:id="@+id/image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_action_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title: Assembly"
        android:id="@+id/Title"
        android:layout_toRightOf="@+id/image"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor: Frank Allaire"
        android:id="@+id/Professor"
        android:layout_below="@+id/Title"
        android:layout_alignLeft="@+id/Title"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Code: COMP-4475"
        android:id="@+id/CCode"
        android:layout_below="@+id/Professor"
        android:layout_alignLeft="@+id/Professor"
        android:singleLine="false"
        android:paddingTop="10dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Book: Cooking with Allaire"
        android:id="@+id/bookName"
        android:paddingTop="10dp"
        android:layout_below="@+id/CCode"
        android:layout_alignLeft="@+id/CCode"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click here to see available listings"
        android:id="@+id/availableListings"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/CCode"
        android:layout_alignEnd="@+id/CCode"
        android:layout_toRightOf="@+id/image"
        android:clickable="true"
        android:visibility="visible"
        android:onClick="onClick"/>

</RelativeLayout>
