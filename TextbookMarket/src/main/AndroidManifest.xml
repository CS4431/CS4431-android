<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lakehead.textbookmarket" >
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lakehead.textbookmarket.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:parentActivityName=".MainActivity"
            android:name="com.lakehead.textbookmarket.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <activity
            android:name="com.lakehead.textbookmarket.LoginActivity"
            android:label="Login"
            android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>

        <activity
            android:name="com.lakehead.textbookmarket.RegisterActivity"
            android:label="Register"
            android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>

    </application>

</manifest>
